<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <record id="view_subscription_list" model="ir.ui.view">
    <field name="name">gym.subscription.list</field>
    <field name="model">gym.subscription</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="duration_months"/>
        <field name="type"/>
        <field name="price"/>
      </list>
    </field>
  </record>

  <record id="view_subscription_form" model="ir.ui.view">
    <field name="name">gym.subscription.form</field>
    <field name="model">gym.subscription</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="duration_months"/>
            <field name="type"/>
            <field name="access"/>
            <field name="price"/>
            <field name="description"/>
          </group>
        </sheet>
        <div class="oe_chatter">
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <record id="action_subscription" model="ir.actions.act_window">
    <field name="name">Abonnements</field>
    <field name="res_model">gym.subscription</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_gym_root" name="Salle de Sport"/>
  <menuitem id="menu_gym_subscription" name="Abonnements" parent="menu_gym_root" action="action_subscription"/>
</odoo>